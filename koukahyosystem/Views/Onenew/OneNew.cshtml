                    table.deleteRow(i);
                }
                var rownum = 1;
                for (const [key, value] of Object.entries(oneononelist)) {

                    //var objval = JSON.stringify(value);
                    var d_dHIDUKE = "";
                    var c_cMOKUHYO = "";
                    var s_sMOKUHYO = "";
                    var f_fKANRYOU = "";
                    var d_dJISHIBI = "";

