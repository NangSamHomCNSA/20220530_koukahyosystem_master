            //リスト一覧を表示する
            function RefreshData(oneononelist) {

                var pagenumber = 0;
                if (selectedpage != "") {
                    pagenumber = parseInt(selectedpage) - 1;
                }
                
                var table = document.getElementById("OneonOneLists");
                var rowCount = table.rows.length;
