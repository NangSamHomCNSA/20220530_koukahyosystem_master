@model koukahyosystem.Models.ShukeiHyouModel

@{
    ViewBag.Title = "KanrishaShukei";
    var grid = new WebGrid(source: Model.KanriShukeiList, canPage: true, rowsPerPage: 10, ajaxUpdateContainerId: "gridContent");
    
}

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="~/Content/Common/commonstyle.css" rel="stylesheet" />
    <link href="~/lib/font-awesome/css/all.css" rel="stylesheet" />
    <style>
        button {
            color: black;
            text-align: center;
            text-decoration: none;
            display: inline-block;
            border: 0 solid #555555;
            border-radius: 4px;
            margin-left: 10px;
        }

        .data_tbl thead, th {
            border: solid 2px #cccccc;
            text-align: center;
        }

        .data_tbl tobody, tr, td {
            border: solid 2px #cccccc;
            /*text-align: left;*/
        }

        .data_tbl {
            table-layout: fixed;
            width: auto;
        }

            .data_tbl td, th {
                padding: 3px 7px 2px;
            }

            .data_tbl thead {
                padding-bottom: 4px;
                padding-top: 5px;
                text-align: center;
            }

                .data_tbl thead a {
                    white-space: nowrap;
                    color: black;
                }

                .data_tbl thead th {
                    text-align: center;
                }

                    .data_tbl thead td:first-child,
                    .data_tbl thead th:first-child,
                    .data_tbl tbody td:first-child,
                    .data_tbl tbody th:first-child {
                        width: 90px;
                        max-width: 90px;
                        text-align: center;
                        border: solid 2px #cccccc;
                        min-width: 60px;
                    }

                    .data_tbl thead td:nth-child(2),
                    .data_tbl thead th:nth-child(2),
                    .data_tbl tbody td:nth-child(2),
                    .data_tbl tbody th:nth-child(2) {
                        width: 70px;
                        max-width: 70px;
                        border: solid 2px #cccccc;
                    }

                    .data_tbl thead td:nth-child(3),
                    .data_tbl thead th:nth-child(3),
                    .data_tbl tbody td:nth-child(3),
                    .data_tbl tbody th:nth-child(3) {
                        width: 80px;
                        max-width: 80px;
                        border: solid 2px #cccccc;
                        display: none;
                        min-width: 50px;
                    }

                    .data_tbl thead td:nth-child(4),
                    .data_tbl thead th:nth-child(4),
                    .data_tbl tbody td:nth-child(4),
                    .data_tbl tbody th:nth-child(4) {
                        width: 90px;
                        max-width: 90px;
                        word-wrap: break-word;
                        border: solid 2px #cccccc;
                        min-width: 60px;
                    }

                    .data_tbl thead td:nth-child(5),
                    .data_tbl thead th:nth-child(5),
                    .data_tbl tbody td:nth-child(5),
                    .data_tbl tbody th:nth-child(5) {
                        width: 90px;
                        max-width: 90px;
                        border: solid 2px #cccccc;
                        text-align: center;
                        min-width: 70px;
                    }

                    .data_tbl thead td:nth-child(6),
                    .data_tbl thead th:nth-child(6),
                    .data_tbl tbody td:nth-child(6),
                    .data_tbl tbody th:nth-child(6) {
                        width: 100px;
                        max-width: 100px;
                        border: solid 2px #cccccc;
                        text-align: center;
                    }

                    .data_tbl thead td:nth-child(7),
                    .data_tbl thead th:nth-child(7),
                    .data_tbl tbody td:nth-child(7),
                    .data_tbl tbody th:nth-child(7) {
                        width: 50px;
                        max-width: 50px;
                        border: solid 2px #cccccc;
                        text-align: center;
                    }

        .crossed {
            background-image: linear-gradient(to bottom right, transparent calc(50% - 1px), black, transparent calc(50% + 1px));
        }

        #shukei_header {
            height: 38px;
        }

        .shuheadline {
            font-size: 18px;
            line-height: 38px;
        }

        @@media only screen and (max-width: 850px) {
            #shukeihyou {
                margin: 10px 10px 10px 0px;
            }
        }

        @@media only screen and (max-width: 420px) {
            #shukei_header {
                height: 30px;
            }

            .shuheadline {
                font-size: 14px;
                line-height: 30px;
            }

            .data_tbl {
                max-width: 420px;
                overflow: auto;
                table-layout: auto;
                border-collapse: collapse;
            }

                .data_tbl thead th, .data_tbl thead td {
                    width: 420px;
                }

                .data_tbl th:nth-child(3), .data_tbl td:nth-child(3) {
                    width: 30px;
                    min-width: 30px;
                }

                .data_tbl th {
                    padding: 0px;
                    margin: 0px;
                }

                .data_tbl thead td:first-child,
                .data_tbl thead th:first-child,
                .data_tbl tbody td:first-child,
                .data_tbl tbody th:first-child {
                    width: 60px;
                    max-width: 60px;
                    text-align: center;
                    border: solid 2px #cccccc;
                    max-width: 60px;
                }

                .data_tbl thead td:nth-child(2),
                .data_tbl thead th:nth-child(2),
                .data_tbl tbody td:nth-child(2),
                .data_tbl tbody th:nth-child(2) {
                    width: 20px;
                    max-width: 20px;
                    border: solid 2px #cccccc;
                }

                .data_tbl thead td:nth-child(6),
                .data_tbl thead th:nth-child(6),
                .data_tbl tbody td:nth-child(6),
                .data_tbl tbody th:nth-child(6) {
                    width: 100px;
                    max-width: 100px;
                    border: solid 2px #cccccc;
                    text-align: center;
                    min-width: 90px;
                }
                .button{
                    margin-left:0px;
                }
        }
    </style>
    <script src="@Url.Content("~/Scripts/jquery-1.12.4.min.js")"></script>
    <script>
        $(document).ready(function () {

              $('.jyouikoka').toggle();
            $('#koukaBtn').on('click', function () {
                if ($('#fjyoicol').val() == '1') {
                    $('#fjyoicol').val('0');
                }
                else {
                    $('#fjyoicol').val('1');
                }
                $('.jyouikoka').toggle();
            });

            if ('@Model.fjyoicol' == "1") {
                $('.jyouikoka').toggle();
            }

            $('#DataTable tbody tr td input').change(function () {
                var col = $(this).parent().index();
                var curkubun = $(this).closest("tr").find('td:eq(6) input').val();
                var koukaval = $(this).closest("tr").find('td:eq(4) input').val();

                if (col == 4) {

                    $("#DataTable tbody tr").find('td:eq(6)').each(function () {
                        var thiskubun = $(this).find("input").val();
                        if (curkubun == thiskubun) {
                            $(this).closest("tr").find('td:eq(4) input').val(koukaval);
                        }
                    });
                }
            });



        });
    </script>
    <script type="text/javascript">
        function SelectedIndexChanged() {
            $('#Btn_display').click();
        }

        function isSpecialKey(event) {

            var regex = new RegExp("^[0-9]+$");
            var key = String.fromCharCode(!event.charCode ? event.which : event.charCode);

            if (!regex.test(key)) {

                event.preventDefault();
                return false;
            }


        }

        function isNumberKey(evt) {

            var charCode = (evt.which) ? evt.which : evt.keyCode
            if (charCode > 31 && (charCode < 48 || charCode > 57))
                return false;
            return true;
        }

    </script>
</head>
<body>
    @if (Session["isAuthenticated"] != null)
    {
    <div id='div_main' class="panel panel-info" style="height:100%;" >

        @using (Html.BeginForm("KanrishaShukei", "ShukeiHyou", FormMethod.Post))
        {
            
            <div id="shukei_header" style="background-color: rgb(34, 148, 172); width:100%;">
                <h6 class="text-center align-middle shuheadline" style="color:white;">集計表</h6>
            </div>

            <div class="container" style="margin:10px;">
                <input type="submit" value="display" id="Btn_display" name="year_btn" class="button" style="display:none" />
                <div class="filter1on1">
                    <div class="mb-2" style="display:inline-block;margin-right:10px;">
                        <div class="row g-3">
                            <div class="col-auto">
                                @Html.Label("年度", new { style = "color:black;font-weight: normal !important;margin-left:0px;margin-right:5px;" })
                            </div>
                            <div class="col-auto" style="margin-top:11px;">
                                <button class="btn btn-link preBtn" name="year_btn" value="<">
                                    <i class="fas fa-caret-left"></i>
                                </button>
                                @Html.DropDownListFor(m => m.cur_year, Model.YearList, new { @id = "year", onchange = "SelectedIndexChanged()", @class = "btn btn-sm dropdown-toggle yeardropdown data-bs-toggle" })
                                <button class="btn btn-link preBtn" name="year_btn" value=">" style="">
                                    <i class="fas fa-caret-right"></i>

                                </button>
                                <button type="button" id="koukaBtn" value="jyouikouka" class="DefaultBtn fontsize" name="ShukeiBtn" style="width:auto; height:35px; text-align:center;margin-left:10px; ">情意考課入力</button>
                            </div>
                        </div>
                    </div>
                    <div style="display:inline-block">
                        <div class="row">
                            <div class="col-auto">
                                <button type="submit" id="hozonBtn" value="hozon" name="ShukeiBtn" class="button DefaultBtn fontsize" style="width:60px; height:35px; text-align:center;">保存</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="table_div">
                <div id="shukeihyou" style="margin:10px 10px 10px 10px;overflow:auto;" class="row">

                    <table class="data_tbl fontsize" id="DataTable" cellpadding="7" align="center">
                        <thead class="t_head">
                            <tr style="background-color:rgb(189, 233, 242)">
                                <th>社員名</th>
                                <th></th>
                                <th>基礎評価</th>
                                <th>目標評価</th>
                                <th>360度評価</th>
                                <th class="jyouikoka" style="width:120px;">情意考課入力</th>
                                <th>合計</th>
                                <th style="display:none;">区分</th>
                            </tr>
                        </thead>
                        <tbody class="t_body">

                            @for (int i = 0; i < Model.KanriShukeiList.Count; i++)
                            {
                                if (i % 2 == 0)
                                {
                                    <tr>
                                        <td rowspan="2">@Model.KanriShukeiList[i].sSHAIN</td>
                                        <td style="text-align:left">@Model.KanriShukeiList[i].description</td>
                                        <td style="text-align:center">@Model.KanriShukeiList[i].sandankaihyouka</td>
                                        <td style="text-align:center">@Model.KanriShukeiList[i].kokahyou</td>
                                        <td style="text-align:center">@Model.KanriShukeiList[i].hyouka360</td>
                                        <td style="text-align:center;width:100px;" class="jyouikoka crossed">@Model.KanriShukeiList[i].jyouikouka</td>
                                        <td style="text-align:center">@Model.KanriShukeiList[i].total</td>
                                        <td style="text-align:center; display:none;">@Html.TextBoxFor(m => m.KanriShukeiList[i].cKUBUN)</td>
                                    </tr>
                                }
                                else
                                {
                                    <tr>

                                        <td style="text-align:left">@Model.KanriShukeiList[i].description</td>
                                        <td style="text-align:center">@Model.KanriShukeiList[i].sandankaihyouka</td>
                                        <td style="text-align:center">@Model.KanriShukeiList[i].kokahyou</td>
                                        <td style="text-align:center">@Model.KanriShukeiList[i].hyouka360</td>

                                        <td style="text-align:center;width:100px;" class="jyouikoka">
                                            @Html.TextBoxFor(m => m.KanriShukeiList[i].jyouikouka, new
                                       {
                                           @type = "number",
                                           @onkeypress = "return isNumberKey(event)",
                                           maxlength = 4,
                                           @size = "4",
                                           style = "margin:left:0px;width:100%;text-align:right;border:none;",
                                           oninput = "javascript: if (this.value.length > this.maxLength) this.value = this.value.slice(0, this.maxLength);"

                                       })
                                        </td>
                                        <td style="text-align:center">@Model.KanriShukeiList[i].total</td>
                                        <td style="text-align:center;display:none;">@Html.TextBoxFor(m => m.KanriShukeiList[i].cKUBUN)</td>
                                    </tr>
                                }

                            }
                        </tbody>
                    </table>
                </div>
            </div>
            @Html.HiddenFor(m => m.fjyoicol, new { id = "fjyoicol" })
        }
    </div>
    }
</body>

